<% title "Find from a category" %>

<div class="mb-3 pt-2 ps-2">
  <%= link_to "Add New Category", new_category_path, class: "btn btn-success" %>
  <%= link_to "Back to All Logs", meal_logs_path, class: "btn btn-secondary" %>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4">
      <div class="card mb-3 pt-2 ps-2" style="border-color: <%= category.color %>; border-width: 2px;">
        <h3><%= link_to category.name, category_path(category) %></h2>
        <strong>Average Calorie:</strong> <%= category.average_calorie || 0 %>
        <br>
        <strong>Records:</strong> <%= category.meal_logs.count %><br>
        <div class="mt-2 d-flex flex-column align-items-center">
          <%= link_to "See Logs", category_path(category), class: "btn btn-primary" %>
        </div>
        <div class="mt-2 mb-2 d-flex flex-column align-items-center">
          <%= link_to "Edit Category", edit_category_path(category), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>