<% title "View Comment" %>

<div class="card border-success w-75 mx-auto pt-2 ps-2">
    <%= render @comment %>
    
    <div class="pb-2">
      <%= link_to "Edit Comment", edit_meal_log_comment_path(@meal_log,@comment), class: "btn btn-success" %>
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmModal">
        Delete Comment
      </button>
      <%= link_to "Back to All Comments", meal_log_comments_path(@meal_log), class: "btn btn-secondary" %>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <%= button_to "Yes", [@meal_log,@comment], method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>