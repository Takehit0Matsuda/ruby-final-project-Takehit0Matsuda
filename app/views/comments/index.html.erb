<% title "Comments for " + @meal_log.Meal_name %>

<p style="padding-left:12.45%">
    <%= link_to "New Comment", new_meal_log_comment_path(@meal_log), class: "btn btn-success" %>
    <%= link_to "Back to Meal Log", meal_log_path(@meal_log), class: "btn btn-secondary" %>
</p>

<% @meal_log.comments.each do |comment| %>
    <div class="card border-success w-75 mx-auto mb-3 pt-2 ps-2">
        <%= render comment%>
    </div>
<% end %>

